<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="MyCompany_NewsManager::news_manager" title="News Manager" sortOrder="100">
                    <resource id="MyCompany_NewsManager::news" title="Manage News" sortOrder="10">
                        <resource id="MyCompany_NewsManager::news_view" title="View News" sortOrder="10"/>
                        <resource id="MyCompany_NewsManager::news_create" title="Create News" sortOrder="20"/>
                        <resource id="MyCompany_NewsManager::news_edit" title="Edit News" sortOrder="30"/>
                        <resource id="MyCompany_NewsManager::news_delete" title="Delete News" sortOrder="40"/>
                    </resource>
                    <resource id="MyCompany_NewsManager::categories" title="Manage Categories" sortOrder="20">
                        <resource id="MyCompany_NewsManager::categories_view" title="View Categories" sortOrder="10"/>
                        <resource id="MyCompany_NewsManager::categories_create" title="Create Categories" sortOrder="20"/>
                        <resource id="MyCompany_NewsManager::categories_edit" title="Edit Categories" sortOrder="30"/>
                        <resource id="MyCompany_NewsManager::categories_delete" title="Delete Categories" sortOrder="40"/>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
